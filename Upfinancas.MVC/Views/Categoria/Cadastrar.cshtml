@model Upfinancas.MVC.ViewModel.CategoriaViewModel
@{
    ViewBag.Title = "Categorias";
}
<h3 class="page-title">
    Categorias <small>cadastradas</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Home")">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Categoria")">Categorias</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            Nova Categoria
        </li>
    </ul>

</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Cadastrar", "Categoria", FormMethod.Post, new { @id = "form1"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="portlet box grey-cascade">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa  fa-plus"></i> Cadastrar nova categoria
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="form-body form-vertical">
                                <div class="row">
                                    <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                                        <label>
                                            Nome: <span class="text-danger">* </span>
                                        </label>
                                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                                        <label>
                                            Tipo:
                                        </label>
                                        @Html.DropDownListFor(model => model.Tipo, Model.Tipos, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn green">Salvar</button>
                                        @Html.ActionLink("Volta", "Index", "Categoria", null, new { @class = "btn default" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var Inside = function () {
        return {
            init: function () {
            }
        };
    }();
</script>