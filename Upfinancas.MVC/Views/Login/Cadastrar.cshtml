
@model Upfinancas.MVC.ViewModel.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<p class="mt5 mb20">
    Você está no caminho certo! Preencha os dados abaixo para utilizar o sistema.
</p>

@using (Html.BeginForm("Cadastrar", "Login",FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true);

    <div class="form-group">
        @Html.LabelFor(x=>x.Email)
        @Html.EditorFor(x => x.Email, new {htmlAttributes = new {@class = "form-control", @placeholder = "E-mail"}})
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmeEmail)
        @Html.EditorFor(x => x.ConfirmeEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Confirme seu e-mail" } })
        @Html.ValidationMessageFor(x => x.ConfirmeEmail)
    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.Nome)
        @Html.EditorFor(x => x.Nome, new {htmlAttributes = new {@class = "form-control", @placeholder = "Nome"}})
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Captcha)
        <a href="@Url.Action("Index")">
            <img alt="Captcha" src="@Url.Action("CaptchaImage")" style="" />
        </a>
        @Html.EditorFor(x => x.Captcha, new { htmlAttributes = new { @class = "form-control",@placeholder="Resultado" } })
        @Html.ValidationMessageFor(x => x.Captcha)
    </div>

    <button class="btn btn-success btn-block">Cadastrar</button>
}
